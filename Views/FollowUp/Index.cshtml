@model Follow_Up_Manager.Models.ViewModels.FollowUpViewModel;

@{
    ViewData["Title"] = "Follow Up List";
}

<div id="content">
    <div>

        @if(TempData["success"] != null)
        {
            @* <script src="/lib/jquery//dist/jquery.js"></script> *@
            <script src="~/Theme/vendor/jquery/jquery.min.js"></script>
            @* <script src="https//cdnj.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.mis.js"></script> *@
            <script type="text/javascrpt">
                console.log("am i nayem ok?");
                toastr.success('@TempData["success"]')
            </script>
        }
    </div>

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        @* <h1 class="h3 mb-2 text-gray-800">Tables</h1>
        <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
            For more information about DataTables, please visit the <a target="_blank"
                href="https://datatables.net">official DataTables documentation</a>.</p> *@

        

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-md-10">
                        <h6 class="m-0 font-weight-bold text-primary">Follow Up List</h6>
                    </div>
                     <div class="col-md-2">
                        @* <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6> *@
                        <a asp-controller="FollowUp" asp-action="Create" class="btn btn-sm btn-primary btn-sm">Create</a>
                    </div>
                    
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Task</th>
                                <th>Start Date</th>
                                <th>Follow Up Date</th>
                                <th>Name</th>
                                <th>Project</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Task</th>
                                <th>Start Date</th>
                                <th>Follow Up Date</th>
                                <th>Name</th>
                                <th>Project</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach(var item in ViewBag.dataList){
 <tr>
                                    <td>@item.Task</td>
                                    @* <td>@item.StartDate</td> *@
                                    <td>@(DateOnly.FromDateTime(@item.StartDate).ToString("dd-MM-yyyy"))</td>
                                    <td>@(DateOnly.FromDateTime(@item.FollowUpDate).ToString("dd-MM-yyyy"))</td>
                                    <td>@item.Name</td>
                                    <td>@item.Project</td>
                                    <td>
                                        <a asp-controller="FollowUp" asp-action="View" asp-route-id="@item.Id"  class="btn btn-sm btn-primary">View</a>
                                        <a asp-controller="FollowUp" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                                        <a asp-controller="FollowUp" asp-action="" class="btn btn-sm btn-warning ">Action</a>
                                        <a asp-controller="FollowUp" asp-action="" class="btn btn-sm btn-danger ">Mark</a>
                                    </td>
                                </tr>
                            }
                          
                            

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

</div>

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/Theme/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Theme/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Theme/js/demo/datatables-demo.js"></script>

}
